#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# acpi alternative
# acpi | sed "s/Battery [0-9]: //;s/[Dd]ischarging, /ğŸ”‹/;s/[Nn]ot charging, /ğŸ›‘/;s/[Cc]harging, /ğŸ”Œ/;s/[Uu]nknown, /â™»ï¸/;s/[Ff]ull, /âš¡/;s/ \(remaining\|until charged\)//"; exit

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity 2>/dev/null) || break
	status=$(sed "s/[Dd]ischarging//;s/[Nn]ot charging/ï–‚/;s/[Cc]harging/ï–ƒ/;s/[Uu]nknown/ï–ƒ/;s/[Ff]ull/âš¡/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a â— as a warning.
	 [ "$capacity" -ge 90 ] && [ "$status" = "" ] && status="ï•¸"
	 [ "$capacity" -lt 20 ] && [ "$status" = "" ] && status="ï•º"
	 [ "$capacity" -lt 30 ] && [ "$status" = "" ] && status="ï•»"
	 [ "$capacity" -lt 40 ] && [ "$status" = "" ] && status="ï•¼"
	 [ "$capacity" -lt 50 ] && [ "$status" = "" ] && status="ï•½"
	 [ "$capacity" -lt 60 ] && [ "$status" = "" ] && status="ï•¾"
	 [ "$capacity" -lt 70 ] && [ "$status" = "" ] && status="ï•¿"
	 [ "$capacity" -lt 80 ] && [ "$status" = "" ] && status="ï–€"
	 [ "$capacity" -lt 90 ] && [ "$status" = "" ] && status="ï–"

	printf " %s %s%s%% " "$status" "$warn" "$capacity"
	unset warn
done | sed 's/ *$//'

